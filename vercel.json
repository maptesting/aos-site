{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },

        /* Allow mic for your chat widget; keep camera + geo off */
        { "key": "Permissions-Policy", "value": "camera=(), geolocation=(), microphone=(self)" },

        /* RELAXED CSP tailored to your site */
        {
          "key": "Content-Security-Policy",
          "value": ""
            + "default-src 'self'; "
            + "img-src 'self' https: data:; "
            + "media-src 'self' https: data: blob:; "
            + "font-src 'self' https://fonts.gstatic.com data:; "
            + "style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; "
            + "script-src 'self' 'unsafe-inline' https://cdn.tailwindcss.com https://plausible.io; "
            + "connect-src 'self' https://plausible.io https://api.elevenlabs.io https://vitals.vercel-insights.com; "
            + "frame-src https://www.youtube.com https://www.youtube-nocookie.com; "
        }
      ]
    }
  ]
}
